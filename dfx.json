{
  "version": 1,
  "dfx": "0.22.0",
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  },
  "canisters": {
    "home": {
      "dependencies": [
        "db"
      ],
      "type": "motoko",
      "main": "backend/home/main.mo",
      "declarations": {
        "node_compatibility": true,
        "output": "frontend/src/declarations/home"
      }
    },

    "proposal": {
      "dependencies": [
        "db"
      ],
      "type": "motoko",
      "main": "backend/proposal/main.mo",
      "declarations": {
        "node_compatibility": true,
        "output": "frontend/src/declarations/proposal"
      }
    },

    "db": {
      "type": "motoko",
      "main": "backend/db/main.mo",
      "declarations": {
        "node_compatibility": true,
        "output": "frontend/src/declarations/db"
      }
    },

    "whitelist": {
      "type": "motoko",
      "main": "backend/whitelist/main.mo",
      "declarations": {
        "node_compatibility": true,
        "output": "frontend/src/declarations/whitelist"
      }
    },

    "frontend": {
      "dependencies": [
        "home", "proposal"
      ],
      "frontend": {
        "entrypoint": "frontend/build/index.html"
      },
      "source": [
        "frontend/build"
      ],
      "type": "assets",
      "output_env_file": ".env"    
    }    
  }  
}